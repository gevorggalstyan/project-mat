# =============================================================================
# Environment Variables Template
# =============================================================================
# Copy this file to .env.local for local development
# NEVER commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Local Development Identity (Cloudflare Access Bypass)
# -----------------------------------------------------------------------------
# Set to 'true' to enable local development mode without Cloudflare Access
# Only use this in local development - NEVER in production
LOCAL_DEV_IDENTITY_ENABLED=true

# User email for local development
LOCAL_DEV_USER_EMAIL=dev@dcs360.local

# User name for local development
LOCAL_DEV_USER_NAME=Local Developer

# -----------------------------------------------------------------------------
# Test Page Protection
# -----------------------------------------------------------------------------
# Set to 'true' to enable the /test-db page in production
# By default, this page is disabled in production for security
# ENABLE_TEST_DB_PAGE=false

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
# Automatically set by Node.js, but can be overridden
# NODE_ENV=development
